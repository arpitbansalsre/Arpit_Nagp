<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MagnetoAutomation Smoke TestSuite" verbose="1">
    <groups>
        <run>
            <include name="smoke"/>
        </run>
    </groups>
    <listeners>
        <listener class-name="BaseComponents.Listeners"/>
    </listeners>
    <test name="SmokeTests">
        <classes>
            <class name="tests.LoginTest"></class>
            <class name="tests.MyAccountsTest"></class>
            <class name="tests.CheckoutTest"></class>
        </classes>
    </test>
</suite>