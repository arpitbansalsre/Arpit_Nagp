pipeline {
    agent any

    triggers {
        cron('0 06 * * *')  // Run daily at 6 AM
    }

    tools {
        jdk "JDK21"      // Must match your JDK in Global Tool Configuration
        maven "Maven"    // Must match your Maven in Global Tool Configuration
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs() 
                // Explicitly specify the branch
                git branch: 'main', url: 'https://github.com/arpitbansalsre/Arpit_Nagp'
            }
        }

        stage('Build') {
            steps {
                // Compile without running tests
                bat 'mvn clean compile -DskipTests=true'
            }
        }

        stage('Test') {
            steps {
                // Run tests
                bat 'mvn test'
            }
        }

        stage('Sonar Analysis') {
            steps {
            withSonarQubeEnv("Test_SonarQube")
                {
                    bat "mvn org.sonarsource.scanner.maven:sonar-maven-plugin:4.0.0.4121:sonar"
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage (optional)...'
            }
        }

	    stage("Publish to Artifactory"){
            steps{
                rtMavenDeployer(
                    id: 'deployer',
                    serverId: '7042949460@artifactory',
                    releaseRepo: 'nagp.session.jfrog',
                    snapshotRepo: 'nagp.session.jfrog'
                )
                rtMavenRun(
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: 'deployer'
                    )
                rtPublishBuildInfo(
                    serverId:'7042949460@artifactory',
                )
            }        
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
